int main(int argv, char **argc){
	FILE *fp, *new;
	int n, m, i;
	char *N , aux[200];

	/* Abre el archivo, si hay error termina
	el proceso*/
	fp = fopen(argc[1],"r");
	if(fp == NULL){
		printf("Error al abrir el archivo\n");
		exit(1);
	}
	/* Guardo el numero de la primera cantidad de numeros*/
	if(fscanf(fp,"%d",&n) == 0){
		printf("Error al leer la linea\n");
		exit(1);
	}
	/* Creo el arreglo para la primera cantidad de numeros*/
	N = (char *)malloc(sizeof(aux)*n);

	/*Ahora los guardo */
	for(i = 0; i < n; i++ ){
		fscanf(fp,"%s",aux);
		strcpy(N[i],aux);
		printf("%s\n",aux );
	}

	//ordenarArregloS(N,n);

	fclose(fp);
	return 0;

}

//---------------------------------
int anagramas(char **S,int n, char *str)
{	
	int total=0;
	minuscula(str);
	for (int i=0;i <n;i++)
	{
		minuscula(S[i]);
	}	
	
	int letras_S[27] = {0}; int letras_str[27] ={0};
	for (int i = 0; i< n;i++)
	{
		if(strlen(S[i]) == strlen(str))	 // Si tienen igual largo , entonces agrega el numero de letras.
		{
			int t2 =1;
			for (int j=0;j<strlen(S[i]);j++)
			{
				letras_S[92-S[i][j]]+=1; //si por ejemplo la primera palabra es hola y la qu se busca es casa
				letras_str[92-str[j]]+=1;	// se agrega +1 en h de letras_s, y +1 en c de letras str
			}
			for (int k=0;k<27;k++)
			{
				if(letras_S[k] != letras_str[k])
				{
					t2 =0;
					break;
				}
				
			}
			total +=t2;
		}
		
	}


		


	
	return total;
}

